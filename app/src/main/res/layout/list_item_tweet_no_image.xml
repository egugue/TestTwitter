<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:layout_width="@dimen/profile_image_size"
        android:layout_height="@dimen/profile_image_size"
        android:id="@+id/user_profile_icon"
        android:src="@drawable/ic_launcher"
        android:paddingTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/nickname"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/user_profile_icon"
        android:layout_toEndOf="@+id/user_profile_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/username"
        android:layout_toEndOf="@+id/nickname"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nickname"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tweet_created"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Textあああああああああああああああああああああああああああああああああああああ"
        android:id="@+id/tweet_text"
        android:layout_toEndOf="@+id/user_profile_icon"
        android:layout_below="@+id/nickname"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/user_profile_icon" />


</RelativeLayout>