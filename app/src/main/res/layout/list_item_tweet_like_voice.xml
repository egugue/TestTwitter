<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width= "wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="4dp"
    android:paddingLeft="4dp" >

    <ImageView
        android:layout_width="@dimen/profile_image_size"
        android:layout_height="@dimen/profile_image_size"
        android:id="@+id/user_profile_icon"
        android:src="@drawable/ic_launcher"
        android:transitionName="user_profile_icon"
        android:layout_marginRight="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/nickname"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/user_profile_icon"
        android:layout_toEndOf="@+id/user_profile_icon"
        android:textSize="12sp"
        android:textIsSelectable="false"
        android:layout_marginBottom="1dp"
        android:textColor="#ff434343" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/username"
        android:layout_toEndOf="@+id/user_profile_icon"
        android:layout_below="@+id/nickname"
        android:layout_toRightOf="@+id/user_profile_icon"
        android:layout_marginBottom="1dp"
        android:textSize="12sp"
        android:textColor="#ff434343" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tweet_created"
        android:layout_above="@+id/tweet_text"
        android:layout_toRightOf="@+id/user_profile_icon"
        android:layout_toEndOf="@+id/user_profile_icon"
        android:textSize="10sp"
        android:textColor="#ff434343" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Textあああああああああああああああああああああああああああああああああああああ"
        android:id="@+id/tweet_text"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_toEndOf="@+id/user_profile_icon"
        android:layout_below="@+id/user_profile_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/text_border"
        android:textColor="#ff434343" />

</RelativeLayout>