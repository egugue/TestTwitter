<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/open_detail_tweet_button"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:name="com.example.samuyu.testtwitter.fragments.TimelineRecycleFragment"
        android:id="@+id/timeline_fragment"
        android:layout_below="@+id/open_detail_tweet_button"
        android:layout_alignParentLeft="true" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/timeline_fragment"
        android:layout_toEndOf="@+id/timeline_fragment"
        android:id="@+id/tweet_detail_container"></FrameLayout>


</RelativeLayout>
