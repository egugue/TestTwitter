    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="com.example.samuyu.testtwitter.fragments.TimelineRecycleFragment"
            android:id="@+id/timeline_fragment"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="com.example.samuyu.testtwitter.fragments.TimelineFragment"
            android:id="@+id/timeline_fragment"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" /-->

    </RelativeLayout>

    <!-- ドロワー領域 -->

    <include layout="@layout/parts_drawer"
        android:id="@+id/drawer"/>



</android.support.v4.widget.DrawerLayout>
